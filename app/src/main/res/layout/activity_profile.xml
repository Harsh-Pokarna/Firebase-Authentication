<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/black"/>

    <TextView
        android:id="@+id/dummyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/user_profile_image"
        android:text="Name:"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/name"
        android:padding="4dp"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs"
        android:layout_below="@id/dummyname"/>
    <TextView
        android:id="@+id/dummyemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Email:"
        android:layout_below="@id/name"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/email"
        android:padding="4dp"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs"
        android:layout_below="@id/dummyemail"/>
    <TextView
        android:id="@+id/dummyhobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/email"
        android:text="Hobbies:"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/hobbies"
        android:padding="4dp"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs"
        android:layout_below="@id/dummyhobbies"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_user_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:text="UPDATE"
        android:textColor="@color/black"
        android:layout_below="@id/hobbies"
        android:layout_marginTop="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/user_location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="get location"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:layout_below="@id/update_user_profile"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:text="LOGOUT"
        android:layout_below="@id/user_location"
        android:layout_marginTop="20dp"/>



</RelativeLayout>